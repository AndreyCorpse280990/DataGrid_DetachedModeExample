<Window x:Class="DataGrid_DetachedModeExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid_DetachedModeExample"
        mc:Ignorable="d"
        Title="Students!" 
        Height="450" MinHeight="450"
        Width="800" MinWidth="800"
        FontFamily="Consolas" FontSize="20"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="350" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <!-- DataGrid -->
        <DataGrid x:Name="studentsDataGrid" Margin="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        
        <!-- Buttons -->
        <Button x:Name="fillButton" Content="Fill" Margin="10" Grid.Row="1" Grid.Column="0" Click="fillButton_Click" />
        <Button x:Name="updateButton" Content="Update" Margin="10" Grid.Row="1" Grid.Column="1" Click="updateButton_Click" />
    </Grid>
</Window>
